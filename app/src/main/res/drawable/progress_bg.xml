<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360"
    >

    <shape
        android:innerRadius="18dp"
        android:shape="ring"
        android:thickness="5dp"
        android:useLevel="false"
        >

        <!--set the size of the shape-->
        <size
            android:width="50dp"
            android:height="50dp" />

        <!--set the color gradients
            of the shape-->
        <gradient
            android:angle="0"
            android:endColor="#44C349"
            android:startColor="#04487C"
            android:type="linear"
            android:useLevel="false" />
    </shape>


</rotate>