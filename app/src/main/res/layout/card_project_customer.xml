<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    app:cardCornerRadius="14dp"
    android:orientation="vertical"
    android:id="@+id/cardCustomerProject">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/TVCard_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="Set Up 60cm Dutch Style"/>
        <TextView
            android:id="@+id/TVCard_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rayhanfahlevy24"
            android:fontFamily="@font/poppinslight"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/TVCard_price"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textSize="18dp"
                android:fontFamily="@font/poppinsmedium"
                android:text="Rp.3.500.000"/>

            <TextView
                android:id="@+id/TVCard_details"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="18dp"
                android:text="See Detail"
                android:fontFamily="@font/poppinslight"
                android:textColor="@color/primary1"/>
        </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>