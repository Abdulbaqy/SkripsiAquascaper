<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".view.customer_ui.CustomerProfileFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Profile"
        android:textStyle="bold"
        android:textSize="30sp"
        android:fontFamily="@font/poppinsbold"
        />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_cardview2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Name"
            android:fontFamily="@font/poppinslight"
            android:textColor="@color/white"
            android:textSize="14dp"
            />

        <TextView
            android:id="@+id/profile_customer_name"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Profile"
            android:fontFamily="@font/poppinsmedium"
            android:textSize="24dp"
            />

        <View
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:background="#2C000000"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Phone Number"
            android:fontFamily="@font/poppinslight"
            android:textSize="14dp"
            />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/profile_customer_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Profile"
            android:fontFamily="@font/poppinsmedium"
            android:textSize="24dp"
            />

        <View
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:background="#2C000000"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>


        <TextView
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Email"
            android:fontFamily="@font/poppinslight"
            android:textSize="14dp"
            />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/profile_customer_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Profile"
            android:fontFamily="@font/poppinsmedium"
            android:textSize="24dp"
            />

        <View
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:background="#2C000000"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Login As"
            android:fontFamily="@font/poppinslight"
            android:textSize="14dp"
            />


        <TextView
            android:textColor="@color/white"
            android:id="@+id/profile_customer_as"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Profile"
            android:fontFamily="@font/poppinsmedium"
            android:textSize="24dp"
            android:layout_marginBottom="20dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <TextView
            android:id="@+id/mode_status_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Dark Mode"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:textSize="18dp"
            android:fontFamily="@font/poppinsmedium"
            />
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_dark_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logoutBtn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:text="Sign out"
        android:textAllCaps="false"
        android:background="@drawable/round_back_primary_15"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/poppinsbold"
        />



</LinearLayout>