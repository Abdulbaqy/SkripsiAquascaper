<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/aqua"
        android:label="Aquascaper"
        android:roundIcon="@drawable/aqua"
        android:supportsRtl="true"
        android:theme="@style/Theme.MultiUserRealtimeFragment"
        tools:targetApi="31">
        <activity
            android:name=".splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.ChatDetailActivity"
            android:exported="false" />
        <activity
            android:name=".view.customer_ui.CustomerPaymentConfirmation"
            android:exported="false" />
        <activity
            android:name=".view.ProjectDetail"
            android:exported="false" />
        <activity
            android:name=".view.vendor_ui.Invoice"
            android:exported="false" />
        <activity
            android:name=".view.customer_ui.Maintenance"
            android:exported="false" />
        <activity
            android:name=".view.customer_ui.SetUp"
            android:exported="false" />
        <activity
            android:name=".view.vendor_ui.VendorActivity"
            android:exported="false"
            android:label="@string/title_activity_vendor" />
        <activity
            android:name=".view.customer_ui.CustomerActivity"
            android:exported="false"
            android:label="@string/title_activity_customer" />
        <activity
            android:name=".view.Login"
            android:exported="true">
        </activity>
        <activity
            android:name=".view.Register"
            android:exported="false" />
    </application>

</manifest>